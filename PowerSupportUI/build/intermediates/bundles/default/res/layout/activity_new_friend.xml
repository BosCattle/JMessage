<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.jiangtao.support.ui.activity.NewFriendActivity"
    >
  <include layout="@layout/include_header"
      android:id="@+id/header"/>

  <TextView
      android:layout_below="@+id/header"
      android:id="@+id/new_friend_notice"
      android:padding="@dimen/divider_default_height"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="新朋友"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/new_friend_page"
      android:layout_below="@+id/new_friend_notice"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

</RelativeLayout>
