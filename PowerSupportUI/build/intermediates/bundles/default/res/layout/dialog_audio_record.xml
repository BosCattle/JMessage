<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/dialog_loading_bg"
    >

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
    <ImageView
        android:id="@+id/dialog_audio"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_recorder"/>

    <ImageView
        android:id="@+id/dialog_audio_level"
        android:layout_marginStart="@dimen/divider_normal_height"
        android:layout_marginLeft="@dimen/divider_normal_height"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_audio_v1"/>
  </LinearLayout>

  <TextView
      android:layout_marginTop="@dimen/divider_normal_height"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/dialog_text"
      android:textColor="@color/white"
      android:text="@string/dialog_up_cancel"
      />

</LinearLayout>