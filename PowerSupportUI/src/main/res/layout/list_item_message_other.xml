<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/item_chat_avatar_other"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_centerVertical="true"
      android:layout_margin="8dp"
      tools:src="@mipmap/ic_chat_default"
      />


  <TextView
      android:id="@+id/item_chat_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginRight="100dp"
      android:layout_toRightOf="@+id/item_chat_avatar_other"
      android:background="@mipmap/ic_chat_message_other"
      android:paddingBottom="8dp"
      android:paddingLeft="@dimen/divider_normal_height"
      android:paddingRight="@dimen/divider_normal_height"
      android:paddingTop="8dp"
      />

</RelativeLayout>