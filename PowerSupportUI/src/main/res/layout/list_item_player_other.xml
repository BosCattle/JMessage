<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/item_chat_avatar"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_margin="8dp"
      tools:src="@mipmap/ic_chat_default"
      />

  <FrameLayout
      android:background="@mipmap/ic_chat_message_other"
      android:padding="@dimen/activity_horizontal_margin"
      android:id="@+id/view_player_container"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/item_chat_avatar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
    <View
        android:layout_gravity="center_vertical|left"
        android:id="@+id/view_player_style"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@mipmap/ic_voice_right"/>
  </FrameLayout>


  <TextView
      android:id="@+id/item_chat_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/view_player_container"
      android:paddingBottom="8dp"
      android:paddingLeft="@dimen/divider_normal_height"
      android:paddingRight="@dimen/divider_normal_height"
      android:paddingTop="8dp"
      />

</RelativeLayout>