<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_chat_avatar_circle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        tools:src="@mipmap/ic_chat_default"
        />

    <ImageView
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:src="@mipmap/ic_mipmap_default_image"
        android:layout_marginLeft="100dp"
        android:id="@+id/item_chat_message"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_chat_avatar_circle"
        android:background="@mipmap/ic_chat_back_mine"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/divider_normal_height"
        android:paddingRight="@dimen/divider_normal_height"
        android:paddingTop="8dp"
        android:layout_marginBottom="@dimen/divider_normal_height"/>

</RelativeLayout>