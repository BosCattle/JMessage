<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:padding="8dp"
    android:elevation="8dp"
    >

  <de.hdodenhof.circleimageview.CircleImageView
      tools:src="@mipmap/ic_chat_default"
      android:id="@+id/items_group_avatar"
      android:layout_width="72dp"
      android:layout_height="72dp"
      />

  <TextView
      android:maxLines="1"
      android:id="@+id/items_group_name"
      android:textSize="16sp"
      android:textStyle="bold"
      android:padding="8dp"
      tools:text="相对静止"
      android:layout_marginLeft="8dp"
      android:layout_toRightOf="@+id/items_group_avatar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  <TextView
      android:maxLines="1"
      android:layout_below="@+id/items_group_name"
      android:id="@+id/items_group_tab"
      android:padding="8dp"
      android:layout_marginLeft="8dp"
      tools:text="相对静止"
      android:layout_toRightOf="@+id/items_group_avatar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  <ImageView
      android:layout_margin="@dimen/activity_horizontal_margin"
      android:id="@+id/items_group_arrow"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

</RelativeLayout>