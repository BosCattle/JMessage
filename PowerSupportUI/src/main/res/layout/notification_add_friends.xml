<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <RelativeLayout
      android:layout_margin="@dimen/divider_default_height"
      android:id="@+id/notification_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:id="@+id/notification_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/divider_default_height"
        android:paddingTop="@dimen/divider_default_height"
        android:paddingBottom="@dimen/divider_default_height"
        android:textColor="@color/black"
        android:text="@string/app_name"
        />
    <TextView
        android:id="@+id/notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_nickname"
        android:paddingBottom="@dimen/divider_default_height"
        android:paddingLeft="@dimen/divider_default_height"
        android:text="@string/friends_request"
        />

    <ImageView
        android:id="@+id/notification_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher"
        />
  </RelativeLayout>
  <LinearLayout
      android:layout_marginLeft="@dimen/divider_default_height"
      android:layout_marginBottom="@dimen/divider_default_height"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/notification_container"
      android:background="@color/letter_cell"
      android:orientation="horizontal"
      >
    <TextView
        android:id="@+id/notification_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/divider_default_height"
        android:text="@string/friends_agree"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/notification_refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/divider_default_height"
        android:text="@string/friends_refuse"
        android:clickable="true"
        />
  </LinearLayout>
</RelativeLayout>