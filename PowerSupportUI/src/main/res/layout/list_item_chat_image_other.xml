<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_chat_avatar_mine_circle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        tools:src="@mipmap/ic_chat_default"
        />

    <ImageView
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:src="@mipmap/ic_mipmap_default_image"
        android:layout_marginRight="100dp"
        android:id="@+id/item_chat_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_chat_avatar_mine_circle"
        android:background="@mipmap/ic_chat_message_other"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/divider_normal_height"
        android:paddingRight="@dimen/divider_normal_height"
        android:paddingTop="8dp"
        android:layout_marginBottom="@dimen/divider_normal_height"/>

</RelativeLayout>